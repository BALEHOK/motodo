{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "Promise": true
  },
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "valid-jsdoc": 2,

    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,

    "no-var": 0,
    "vars-on-top": 0,

    "no-param-reassign": 1,

    "comma-dangle": 0,

    semi: [2, "always"]
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "plugins": [
    "react"
  ]
}
